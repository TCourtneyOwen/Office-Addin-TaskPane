{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-r",
        "ts-node/register",
        "${workspaceFolder}/test/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": [
        "--preserve-symlinks"
      ]
    },
    {
      "name": "Excel Desktop",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start", "desktop"],
      "args": ["--", "--app", "excel"]
    },
    {
      "name": "PowerPoint Desktop",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start", "desktop"],
      "args": ["--", "--app", "powerpoint"]
    },
    {
      "name": "Word Desktop",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start", "desktop"],
      "args": ["--", "--app", "word"]
    },
    {
      "name": "Office Online (Chrome)",
      "type": "chrome",
      "request": "launch",
      // To debug your Add-in:
      // 1. When prompted, enter the url (share link) to an Office Online document.
      // 2. Sideload your Add-in. https://docs.microsoft.com/en-us/office/dev/add-ins/testing/sideload-office-add-ins-for-testing
      "url": "${input:officeOnlineDocumentUrl}",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Debug: Web"
    },
    {
      "name": "Office Online (Edge)",
      "type": "edge",
      "request": "launch",
      // To debug your Add-in:
      // 1. When prompted, enter the url (share link) to an Office Online document.
      // 2. Sideload your Add-in. https://docs.microsoft.com/en-us/office/dev/add-ins/testing/sideload-office-add-ins-for-testing
      "url": "${input:officeOnlineDocumentUrl}",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Debug: Web"
    },
    {
      "type": "edge",
      "request": "attach",
      "name": "Attach to Addin",
      "port": 9222,
      "trace":"verbose",
      "url": "https://localhost:3000/taskpane.html?_host_Info=Excel$Win32$16.01$en-US$$$$0",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${workspaceFolder}/src/*",
      },
      "showAsyncStacks": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/*",
        "polyfill.js",
        "excel-win32-16.01.js"
      ]
    },
    {
      "type": "edge",
      "request": "launch",
      "name": "Attach to server",
      "webRoot": "${workspaceFolder}\\src",
      "url": "https://localhost:3000/taskpane.html?_host_Info=Excel$Win32$16.01$en-US$$$$0",
      "debugServer": 4712,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${workspaceFolder}/src/*",
        "webpack:///./node_modules/*": "${workspaceFolder}/node_modules/*",
        "webpack:///(webpack)-dev-server/*": "${workspaceFolder}/node_modules/webpack-dev-server/*",
        "webpack:///(webpack)/*": "${workspaceFolder}/webpack/*",
      }
    },
  ],
  "inputs": [
    {
      "id": "officeOnlineDocumentUrl",
      "type": "promptString",
      "description": "Please enter the url for the Office Online document."
    }
  ]
}
